{% extends 'Front/front_base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}

	<div class="register_container">
		<div class="page_title_container">
            <a href="{{path("tcb_front_security_login")}}">Se connecter</a>
            <a href="{{path("tcb_front_security_register")}}" class="isDisabled">S'inscrire</a>
        </div>

		{{ form_start(registrationForm, {'style': 'display:flex; gap: 2rem; flex-direction: column; max-width: 700px;'}) }}

		{{ form_row(registrationForm.firstname) }}
		{{ form_row(registrationForm.email) }}
		{{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
		{{ form_row(registrationForm.agreeTerms) }}

		<button type="submit" class="btn">S'inscire</button>
		{{ form_end(registrationForm) }}
	</div>

{% endblock %}
