<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>
			{% block title %}Welcome!
			{% endblock %}
		</title>
		<link
		rel="icon" href="{{ asset('images/favicon_cookbook.png')}}">
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}

		<!-- https://tailwindcss.com/docs/installation/play-cdn -->
		<script src="https://cdn.tailwindcss.com"></script>

		<!-- https://fonts.google.com/ -->
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link
		rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<!-- Poppins -->
		<link
		href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;800;900&display=swap" rel="stylesheet">
		<!-- Roboto -->
		<link
		href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">

		<!-- font-awesome -->
		<link
		rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css">
	<!-- <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"> -->
	</head>


	<body>
		{% block nav %}
			<header id="header_id">
				<div class="tcb_container">

					<div id="menuToggle">
						<input id="checkbox" type="checkbox">
						<label class="toggle" for="checkbox">
							<div class="bar bar--top"></div>
							<div class="bar bar--middle"></div>
							<div class="bar bar--bottom"></div>
						</label>
					</div>
					{% block connexion %}
						<div class="right_bar_container">
							<a href="#">
								<i class="fas fa-user"></i>
							</a>
							<div class="search_container">
								<i class="fas fa-search"></i>
								<input type="text" placeholder="recherche ...">
							</div>
						</div>
					{% endblock %}


					<nav>
						<ul>
							<li><a href="">Accueil</a></li>
							<li><a href="">Recettes</a></li>
							<li><a href="">Chefs</a></li>
							<li><a href="">Catégories</a></li>
						</ul>

					</nav>


					<a class="logo" href="{{path('tcb_front_main_home')}}">
						<img src="{{ asset('images/logo_marmite_cookbook.png')}}" alt="logo cookbook">
					</a>


				</div>
			{% endblock %}


		</header>
		{% block main %}
		<main>
			{% include "Front/fragments/_flash_message.html.twig" %}
			{% block body %}{% endblock %}
		</main>
		{% endblock %}

		{% block footer %}
			<footer>

				<div class="tcb_container">
					<a class="tcb_btn_arrow" href="#header_id">
						<i class="fas fa-arrow-up"></i>
					</a>

					<ul>
						<li><a>Mentions Légales</a></li>
					</ul>
				</div>

			</footer>
		{% endblock %}

	</body>

	{% block js %}{% endblock %}
</html>

