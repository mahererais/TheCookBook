{% extends 'base.html.twig' %}


    <main class="container my-5">

        {% if status_code is same as 404 %}
            <h1>Oops la page que vous cherchez n'est pas accessible - {{status_code}}</h1>
            <img src="https://www.justwatch.com/images/backdrop/162684168/s640/josephine-ange-gardien" alt="josephine ange gardien">
