{% extends 'Front/front_base.html.twig' %}

{% block title %}Recette
	{{recipe.title}}
{% endblock %}

{% block body %}

	<div class="page-title text-center">
		<h1 style="text-transform:uppercase">{{recipe.title}}</h1>
		<i class="bi bi-tag">catégorie: {{recipe.category.title}}</i>
		<p>	proposé par
			<a href="#user_profile">{{recipe.user.firstname}}{{recipe.user.lastname}}</a>
		</p>
			<i class="bi bi-calendar3">Publiée le
				{{recipe.createdAt|date("d/m/Y")}}</i>

	</div>


	<main class="container">
		<div class="row">
			<div class="flex-row w-50">
				<div class="col">
					<i class="bi bi-tag">catégorie:
						{{recipe.category.title}}</i>
				</div>
				<div>
					<img src="{{recipe.picture}}" class="mw-100" alt="{{recipe.title}}">
				</div>
				<div>
					<div class="row my-4">
						<div class="col my-4">
							<i class="bi bi-alarm">Temps de préparation :
								{{recipe.duration}}
								mn</i>
						</div>
						<div>
							<h3>Ingrédients :
							</h3>

							{% for ingredient in recipe.ingredients %}
								<p>-{{ingredient}}</p>
							{% endfor %}

						</div>
					</div>
				</div>

				<h3>Etapes de préparation :</h3>

				{% for step in recipe.steps %}
					<p class="my-2">{{step}}</p>
				{% endfor %}

			</div>
		</div>

		<div class="user_container tcb_padding my-4" id="user_profile">

			<a href="{{ path('tcb_front_user_show', { 'slug' : recipe.user.slug}) }}">
				<img src="{{recipe.user.picture}}" alt="{{recipe.user.firstname}}{{recipe.user.lastname}}">
			</a>


				<div class="user_descriptions">
					<div>
						<label>Nom :
						</label>
						<p>{{recipe.user.lastname}}</p>
						{# ! à dynamiser avec user #}
						{# <p>{{user.name}}</p> #}

						<label>Prénom :
						</label>
						<p>{{recipe.user.firstname}}</p>
						{# ! à dynamiser avec user #}
						{# <p>{{user.firstname}}</p> #}
					</div>
					<div>
						<label>Spécialité :
						</label>
						<p>{{recipe.user.speciality}}</p>
						{# ! à dynamiser avec user #}
						{# <p>{{user.speciality}}</p> #}

						<label>Experience :
						</label>
						<p>chef {{recipe.user.experience}}</p>
						{# ! à dynamiser avec user #}
						{# <p>{{user.experience}}</p> #}
					</div>
				</div>


		</div>
	</main>

{% endblock %}

