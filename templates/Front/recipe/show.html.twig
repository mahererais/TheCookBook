{% extends 'base.html.twig' %}

{% block title %}Recette {{recipe.title}}{% endblock %}

{% block body %}

    <main class="container">
       <div class="row">
            <div class="flex-row w-50">
                <div>
                    <img src="{{recipe.picture}}" class="mw-100" alt="{{recipe.title}}">
                </div>
            </div>
            <div class="flex-row w-50">
                <h1 class="my-4">{{recipe.title}}</h1>
                <div>
                    <div class="row my-4">
                        <div class="col">
                            <i class="bi bi-tag">Catégorie : {{recipe.category.title}}</i>
                        </div>
                        <div class="col">
                            <i class="bi bi-alarm">Temps de préparation : {{recipe.duration}} mn</i>
                        </div>
                         <div class="col">
                            <i class="bi bi-calendar3">Publiée le {{recipe.createdAt|date("d/m/Y")}}</i>
                        </div>
                        <div class="list-group my-4 ">
                            <h3>Ingrédients : </h3>
                            
                            {% for ingredient in recipe.ingredients %}
                                <p>-{{ingredient}}</p>
                            {% endfor %}

                        </div>
                    </div>
                </div>
            </div>
            <div>
                <h3>Etapes de préparation :</h3>
               
                {% for step in recipe.steps %}
                    <p>{{step}}</p>
                {% endfor %}
            
            </div>
        </div>
    </main>

{% endblock %}
