{% extends 'Front/front_base.html.twig' %}

{% block title %}categorie
{% endblock %}

{% block body %}
<main>
    <div class="main_container">

        

        <div class="carousel-container">
            {% for category in categories %}
            <div class="cards">
            <img src="http://img.freepik.com/photos-premium/mariner-mettre-du-poivre-conserve_75924-11719.jpg">

                <h2>{{ category.title }}</h2>
                

                
                <div class="centered-container">
									<a class="tcb_btn" href="{{ path('tcb_front_category_show', { 'slug' : category.slug}) }}">Voir categorie</a>

                </div>
            </div>
            {% endfor %}
        </div>

      
    </div>
</main>
{% endblock %}
