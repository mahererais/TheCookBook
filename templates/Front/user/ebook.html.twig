{% extends 'Front/user/profile.html.twig' %}

{% block content %}
    <div class="profile-container mt-5">
        <h2>Ebook de {{ user.firstname }}</h2>
        {% if ebookRecipes is not empty %}
            <div class="row">
                {% for recipe in ebookRecipes %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="{{ recipe.picture }}" alt="{{ recipe.title }}" class="card-img-top">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <a href="{{ path('tcb_front_recipe_show', { 'slug' : recipe.slug}) }}">
                                <h5 class="card-title">{{ recipe.title }}</h5>
                                </a>
                                <a onclick="return confirm('Voulez vous retirer cette recette de votre Ebook ?')"
                                   href="{{ path ('tcb_front_user_removeFromEbook', {slug: user.slug,  'recipeSlug': recipe.slug }) }}">
                                    <i class="bi bi-x-circle-fill text-dark"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p>L'utilisateur n'a pas encore ajouté de recettes à son ebook.</p>
        {% endif %}
    </div>
{% endblock %}

