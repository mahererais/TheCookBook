{% extends 'Front/user/profile.html.twig' %}

{% block title %}Favoris de {{app.user.firstname}}{% endblock %}

{% block content %}
    <div class="profile-container mt-5">
        <div class="d-flex justify-content-between align-items-center">
            <h2>Mes recettes favorites</h2>
            <a onclick="return confirm('Voulez vous vider toutes vos recettes favorites enregistrÃ©es ?')" class="tcb_btn" href="{{ path ('tcb_front_favorite_empty')}}">Vider tous mes favoris</a>
        </div>
        {% if favorites is empty %}
            <p>Vous n'avez pas de favoris</p>
        {% else %}
            <div class="row">
                {% for recipe in favorites %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                        {{ recipe.title }}
                            <img src="{{ recipe.picture }}" alt="{{ recipe.title }}" class="card-img-top">
                            <div class="card-body d-flex justify-content-between align-items-center">
                                <a href="{{ path('tcb_front_recipe_show', { 'slug' : recipe.slug}) }}">
                                <h5 class="card-title">{{ recipe.title }}</h5>
                                </a>
                                <a onclick="return confirm('Voulez vous retirer cette recette de vos favoris ?')"
                                   href="{{ path ('tcb_front_favorite_remove', { 'slug': recipe.slug } ) }}">
                                    <i class="bi bi-x-circle-fill text-dark"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
    </div>
{% endblock %}
