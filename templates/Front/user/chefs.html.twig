{% extends 'Front/front_base.html.twig' %}

{% block title %}Liste des chefs
{% endblock %}


{% block body %}

	<h1 class="page_title">The CookBook : les chefs</h1>

		{% for user in users %}
			{% if user.status == "public" and user.roles == ["ROLE_USER"] %}

			<div class="cards">

				<div class="l_cards_container">

					<img src="{{user.picture}}" alt="{{user.firstname}} {{user.lastname}}">

					<div class="r_cards_content">
						<h2>{{user.firstname}}
							{{user.lastname}}</h2>
						<p>chef
							{{user.experience}}</p>
						<h3>Sa spécialité</h3>
						<p>{{user.speciality}}</p>
						<p>
							<h3>En quelques mots</h3>
						</p>
						<p class="l_card_presentation">{{user.presentation}}</p>

								<div class="l_card_btn">
												<a class="tcb_btn" href="">Voir son profil</a>

											</div>
					</div>

				</div>
			</div>

	{% endif %}

		{% endfor %}


	<button type="button" class="tcb_btn">Voir plus</button>

{% endblock %}
