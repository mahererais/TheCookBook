{% extends 'base.html.twig' %}

{% block title %}Page d'accueil
{% endblock %}

{% block body %}

		<div class="titles_container">
			<h1 class="page_title">The Cook Book</h1>
			<p class="page_subTitle">Partage de recettes et éditions de portfolio</p>
		</div>


		{% for category, recipes in categoryRecipes %}

			<div class="cards">
				
				<div class="cards_carrousel_container">
				<div class="cards_carrousel">
					{% for recipe in recipes %}
						<div class="cards_container">
							<img src="{{ recipe.getPicture() }}" alt="{{ recipe.title() }}">
							<div class="cards_content">
								<h2>{{ recipe.title() }}</h2>

								<h3>Ingrédients :</h3>
								<ul>
									<li>les étapes de la recette</li>
									<li>sont actuellement en commentaire au dessus de ce code</li>
									<li>en attendant que l'affichage soit finalisé..</li>
								</ul>

								<h3>Préparation:
								</h3>
								<p class="card_presentation">{# {{ recipe.getSteps() }} #}Etapes de la recette à dynamiser, j'ai mis la fonction en commentaire en attendant la finalisation de l'affichage</p>

								<div class="card_btn">
									<a class="heart_icon">
										<i class="fas fa-heart"></i>
									</a>
									<a class="tcb_btn" href="#">Voir la recette</a>
								</div>
							</div>
						</div>
					{% endfor %}
				</div>
				</div>

				<a class="tcb_btn_caroussel tcb_btn_caroussel_left">
					<i class="fas fa-arrow-up"></i>
				</a>
				<a class="tcb_btn_caroussel tcb_btn_caroussel_right">
					<i class="fas fa-arrow-up"></i>
				</a>
				<div class="card_title">
					{{ category }}
				</div>
			</div>
		{% endfor %}

{% endblock %}
